<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="330.0" prefWidth="311.0" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreenController">
    <children>

        <!-- Button for Customers -->
        <Button fx:id="customersButton" maxWidth="200" onAction="#handleCustomers" text="Customers" />

        <!-- Button for Appointments -->
        <Button fx:id="appointmentsButton" maxWidth="200" onAction="#handleAppointments" text="Appointments" />

        <!-- Button for Reports -->
        <Button fx:id="reportsButton" maxWidth="200" onAction="#handleReports" text="Reports" />

        <!-- Button for Logs -->
        <Button fx:id="logsButton" maxWidth="200" onAction="#handleLogs" text="Logs" />

        <!-- Button for Exit -->
        <Button fx:id="exitButton" maxWidth="200" onAction="#handleExit" text="Exit" />

    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
